{{#each tools as |tool|}}

<section data-id="{{tool.id}}">
    <div class="tool-items">
      <h4 data-id="{{tool.id}}">{{tool.name}}</h4>
       Id: {{tool.id}}
       Quantity: {{tool.quantity}}
       Available: {{tool.available}}
      <button id='delete-tool'>Delete</button>
    </div>
  </section>

{{/each}}
<!-- edit and then the div/modal/whatever that pops up has the default values of the previous values of the tool -->
